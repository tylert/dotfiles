# Handy tricks
[alias]
	files = diff-tree --name-only --no-commit-id -r  # git files ${COMMIT_ID}
	first = rev-list --abbrev-commit --max-parents=0 HEAD
	last = rev-parse --short=7 HEAD
	root = rev-parse --show-toplevel
