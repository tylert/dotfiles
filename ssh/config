HashKnownHosts no
ForwardAgent yes
# ForwardX11 yes
# ForwardX11Trusted yes

# Keep existing connections open
ServerAliveInterval 60
ServerAliveCountMax 3
TCPKeepAlive yes

# Try to reuse connections
ControlMaster auto
ControlPath ~/.ssh/%r@%h-%p
ControlPersist 600

